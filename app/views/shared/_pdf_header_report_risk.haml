!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    :css
      .table.table-borderless {border:10px !important;
        padding-left:15px;
        padding-right:15px;
        
      }
      .apo{max-width: 250px;}
      .ape{max-width: 250px;}
      .aha{
        border:none;
        font-size: 15px;
      }
      hr.new5 {
      border: 1px solid black;
      border-radius: 5px;}
      .aih{
        margin-top:0px;
        font-size:20pt;
        margin-bottom:5px;
        }

  %body
    %table{style:"border:none;"}
      %tbody
        %tr
          %img{:alt => "Logo-pwc", :src => "https://upload.wikimedia.org/wikipedia/commons/thumb/f/f2/Logo-pwc.png/512px-Logo-pwc.png", :width => "60"}/
          %hr.new5
    %center
      %h2.aih Report Risk Without Policy
    %table.table.table-borderless.aha{style:"display:block;"}
      %tr.aha
        %td.aha No. of page
        %td.aha :
        %td.aha
          Page
          %span#page
          of
          %span#topage
          :javascript
            var vars={};
            var x=window.location.search.substring(1).split('&');
            for (var i in x) {
              var z=x[i].split('=',2);
              vars[z[0]] = unescape(z[1]);
            }
            document.getElementById('page').innerHTML = vars.page; 
            document.getElementById('topage').innerHTML = vars.topage;

      
      %tr.aha
        %td.aha Printed On
        %td.aha :
        %td.aha #{Time.now.strftime("%d %B %Y")}
        

      %tr.aha
        %td.aha Printed By
        %td.aha :
        %td.aha= current_user&.name
    %br
    %table.table.table-borderless
      %thead
        %tr
          %th.text-center.apo{:scope => "col", :style => "width: 5.99%"} No
          %th.text-center.apo{:scope => "col", :style => "width: 12%"} Business process
          %th.text-center.apo{:scope => "col",:style => "width: 13%"} Risk
          %th.text-center.apo{:scope => "col",:style => "width: 12%"} Type of risk
          %th.text-center.apo{:scope => "col",:style => "width: 12%"} Level of risk
          %th.text-center.apo{:scope => "col",:style => "width: 12%"} Created by
          %th.text-center.apo{:scope => "col",:style => "width: 10%"} Created on
          %th.text-center.apo{:scope => "col",:style => "width: 10%"} Last update on
          %th.text-center.apo{:scope => "col",:style => "width: 11%"} Last update by
    
    