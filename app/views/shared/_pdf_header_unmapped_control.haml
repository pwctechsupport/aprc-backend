%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    :css
      hr.new5 {
      border: 1px solid black;
      border-radius: 5px;}
      .aih{
        margin-top:0px;
        font-size:20pt;
        margin-bottom:5px;
        }
      .aha{border:none;}
      

  %body
    %table{style:"border:none;"}
      %tbody
        %tr
          %img{:alt => "Logo-pwc", :src => "https://upload.wikimedia.org/wikipedia/commons/thumb/f/f2/Logo-pwc.png/512px-Logo-pwc.png", :width => "60"}/
          %hr.new5
    %center
      %h1.aih Untagged Control in Flowchart Report
    %table.table.table-borderless.aha{style:"display:block;"}
      %tr.aha
        %td.aha No. of page
        %td.aha :
        %td.aha
          Page
          %span#page
          of
          %span#topage
          :javascript
            var vars={};
            var x=window.location.search.substring(1).split('&');
            for (var i in x) {
              var z=x[i].split('=',2);
              vars[z[0]] = unescape(z[1]);
            }
            document.getElementById('page').innerHTML = vars.page; 
            document.getElementById('topage').innerHTML = vars.topage;
      %tr.aha
        %td.aha Printed On
        %td.aha :
        %td.aha #{Time.now.strftime("%d-%m-%Y")}
        

      %tr.aha
        %td.aha Printed By
        %td.aha :
        %td.aha= current_user&.name
    %br
    %table.table.table-borderless
      %thead
        %tr
          %th.text-center{:scope => "col", :style => "width: 5.99%"} No
          %th.text-center{:scope => "col",:style => "width: 10%"} Main / sub Business Process
          %th.text-center{:scope => "col",:style => "width: 10%"} Name of Control
          %th.text-center{:scope => "col", :style => "width: 8%"} Type of Control
          %th.text-center{:scope => "col",:style => "width: 10%"} Control Owner
          %th.text-center{:scope => "col",:style => "width: 8%"} Frequency
          %th.text-center{:scope => "col",:style => "width: 8%"} Nature
          %th.text-center{:scope => "col",:style => "width: 9%"} Assertion
          %th.text-center{:scope => "col",:style => "width: 8%"} Ipo
          %th.text-center{:scope => "col",:style => "width: 6%"} Key Control
          %th.text-center{:scope => "col",:style => "width: 8%"} Last update on
          %th.text-center{:scope => "col",:style => "width: 9%"} Last update by
    
    