    %table.table.table-borderless
      %thead
      
      -z = 1
      -@controls.each do |con|
        -if con.business_processes.present?
          -con&.business_processes.each do |bis|
            -if con.policies.present?
              -con.policies.each do |pol|
                %tbody
                  %tr
                    %td.text-center{:scope => "row",:style => "width: 6%"} #{z}
                    %td.text-center{:scope => "row",:style => "width: 12%"} #{con&.description&.titlecase&.html_safe}
                    %td.text-center{:scope => "row",:style => "width: 10%"} #{con.type_of_control.to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
                    %td.text-center{:scope => "row",:style => "width: 16%"} #{con.control_owner.join(",").to_s.titlecase.html_safe}
                    %td.text-center{:scope => "row",:style => "width: 10%"} #{con.frequency.to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
                    %td.text-center{:scope => "row",:style => "width: 10%"} #{con.nature.to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
                    %td.text-center{:scope => "row",:style => "width: 14%"} #{pol&.title&.titlecase&.html_safe}
                    %td.text-center{:scope => "row",:style => "width: 14%"} #{bis&.name}
                    %td{:scope => "row",:style => "width: 8%"}
                      -if con&.key_control == true
                        .risk.text-center
                          %input#checkboxG5.css-checkbox{:checked => "checked", :name => "checkboxG5", :type => "checkbox"}/
                          %label.css-label{:for => "checkboxG5"}
                      -else
                        .risk.text-center
                          %input#checkboxG4.css-checkbox{:name => "checkboxG4", :type => "checkbox"}/
                          %label.css-label{:for => "checkboxG4"}
                    -z+=1
            -else
              %tbody
                %tr
                  %td.text-center{:scope => "row",:style => "width: 6%"} #{z}
                  %td.text-center{:scope => "row",:style => "width: 12%"} #{con&.description&.titlecase&.html_safe}
                  %td.text-center{:scope => "row",:style => "width: 10%"} #{con.type_of_control.to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
