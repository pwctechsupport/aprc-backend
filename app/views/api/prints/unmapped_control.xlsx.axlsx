
wb = xlsx_package.workbook


wb.add_worksheet(name: "Exception Report") do |sheet|
  # Create the header row
  sheet.add_row ["control owner", "description", "type of control", "frequency", "nature", "assertion", "ipo", "status", "key control", "business process"]
  # Create entries for each item
  ris = @tags.pluck(:control_id).group_by(&:itself).reject{|k,v| v.count>1}.keys
  ris.reject!{|x| x == nil} if ris.count(nil) >= 1
  
  ris.each do |con|
    control = Control.find(con)
    if control.assertion.count < 2
      if control.business_processes.present?
        control&.business_processes.each do |bis|
          sheet.add_row [control&.control_owner.join(",")&.capitalize, control&.description&.capitalize, control&.type_of_control&.gsub(/_/, ' ')&.capitalize, control&.frequency, control&.nature&.capitalize, control&.assertion&.join&.gsub(/_/, ' ')&.capitalize, control&.ipo.join&.gsub(/_/, ' ')&.capitalize, control&.status&.gsub(/_/, ' ')&.capitalize, control&.key_control,bis&.name]
        end
      else
        sheet.add_row [control&.control_owner.join(",")&.capitalize, control&.description&.capitalize, control&.type_of_control&.gsub(/_/, ' ')&.capitalize, control&.frequency, control&.nature&.capitalize, control&.assertion&.join&.gsub(/_/, ' ')&.capitalize, control&.ipo.join&.gsub(/_/, ' ')&.capitalize, control&.status&.gsub(/_/, ' ')&.capitalize, control&.key_control,"No Business Process"]
      end
    else
      if control.business_processes.present?
        control&.business_processes.each do |bis|
          sheet.add_row [control&.control_owner.join(",")&.capitalize, control&.description&.capitalize, control&.type_of_control&.gsub(/_/, ' ')&.capitalize, control&.frequency, control&.nature&.capitalize, control&.assertion&.join(",")&.gsub(/_/, ' ')&.capitalize, control&.ipo&.join(",")&.gsub(/_/, ' ')&.capitalize, control&.status&.gsub(/_/, ' ')&.capitalize, control&.key_control,bis&.name]
        end
      else
        sheet.add_row [control&.control_owner.join(",")&.capitalize, control&.description&.capitalize, control&.type_of_control&.gsub(/_/, ' ')&.capitalize, control&.frequency, control&.nature&.capitalize, control&.assertion&.join(",")&.gsub(/_/, ' ')&.capitalize, control&.ipo&.join(",")&.gsub(/_/, ' ')&.capitalize, control&.status&.gsub(/_/, ' ')&.capitalize, control&.key_control,"No Business Process"]
      end
    end
  end
end

