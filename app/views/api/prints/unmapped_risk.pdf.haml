    %table.table.table-borderless
      %thead
        %tr
          %th.text-center{:scope => "col"} #
          %th.text-center{:scope => "col"} Name
          %th.text-center{:scope => "col"} Level of Risk
          %th.text-center{:scope => "col"} Type of Risk
          %th.text-center{:scope => "col"} Business Processes
      -collect_risk=[]
      -ris =  @tags.pluck(:risk_id).group_by(&:itself).reject{|k,v| v.count>1}.keys
      -ris.reject!{|x| x == nil} if ris.count(nil) >= 1
      -ris.each_with_index do |ras,i|
        -rus = Risk.find(ras)
        -if rus.business_processes.present?
          -rus.business_processes.each do |bus|
            %tr
              %td.text-center{:scope => "row"} #{i+1}
              %td.text-center.ape #{rus.name.to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
              %td.text-center #{rus.level_of_risk.to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
              %td.text-center #{rus.type_of_risk.to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
              %td.text-center #{bus&.name&.titlecase}
        -else
          %tr
            %td.text-center{:scope => "row"} #{i+1}
            %td.text-center.ape #{rus.name.to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
            %td.text-center #{rus.level_of_risk.to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
            %td.text-center #{rus.type_of_risk.to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
            %td.text-center No Business Process
