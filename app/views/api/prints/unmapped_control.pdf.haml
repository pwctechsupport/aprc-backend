    %table.table.table-borderless
      %thead
      
      -collect_risk=[]
      -ris = @tags.pluck(:control_id).group_by(&:itself).reject{|k,v| v.count>1}.keys
      -ris.reject!{|x| x == nil} if ris.count(nil) >= 1
      -ris.each_with_index do |ras,i|
        -con = Control.find(ras)
        -if con.business_processes.present?
          -con.business_processes.each do |bus|
            %tr
              %td.text-center{:scope => "row", :style => "width: 6%"} #{i+1}
              %td.text-center{:scope => "row", :style => "width: 12%"} #{con.type_of_control.to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
              %td.text-center{:scope => "row",:style => "width: 13%"} #{con.control_owner.join(",").to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
              %td.text-center{:scope => "row",:style => "width: 12%"} #{con.frequency.to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
              %td.text-center{:scope => "row",:style => "width: 12%"} #{con.nature.to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
              %td.text-center{:scope => "row",:style => "width: 10%"}= con.convert_assertion.join(",")
              %td.text-center{:scope => "row",:style => "width: 10%"}= con.convert_ipo.join(",")
              %td.text-center{:scope => "row",:style => "width: 12%"} #{bus&.name}
              %td{:scope => "row",:style => "width: 11%"}
                -if con&.key_control == true
                  .risk.text-center
                    %input#checkboxG5.css-checkbox{:checked => "checked", :name => "checkboxG5", :type => "checkbox"}/
                    %label.css-label{:for => "checkboxG5"}
                -else
                  .risk.text-center
                    %input#checkboxG4.css-checkbox{:name => "checkboxG4", :type => "checkbox"}/
                    %label.css-label{:for => "checkboxG4"}
        -else
          %tr
            %td.text-center{:scope => "row", :style => "width: 6%"} #{i+1}
            %td.text-center{:scope => "row", :style => "width: 12%"} #{con.type_of_control.to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
            %td.text-center{:scope => "row",:style => "width: 13%"} #{con.control_owner.join(",").to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
            %td.text-center{:scope => "row",:style => "width: 12%"} #{con.frequency.to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
            %td.text-center{:scope => "row",:style => "width: 12%"} #{con.nature.to_s.gsub(/[^0-9A-Za-z]/, ' ').titlecase.html_safe}
            %td.text-center{:scope => "row",:style => "width: 10%"}= con.convert_assertion.join(",")
            %td.text-center{:scope => "row",:style => "width: 10%"}= con.convert_ipo.join(",")
            %td.text-center{:scope => "row",:style => "width: 12%"} No Business Process
            %td{:scope => "row",:style => "width: 11%"}
              -if con&.key_control == true
                .risk.text-center
                  %input#checkboxG5.css-checkbox{:checked => "checked", :name => "checkboxG5", :type => "checkbox"}/
                  %label.css-label{:for => "checkboxG5"}
              -else
                .risk.text-center
                  %input#checkboxG4.css-checkbox{:name => "checkboxG4", :type => "checkbox"}/
                  %label.css-label{:for => "checkboxG4"}
      

